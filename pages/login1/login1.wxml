<view class="container" v-if=""> 
 <view class="login-icon"> 
 <image class="login-img" src="/images/AIM.png"></image> 
 <!--账号--> 
 </view> 
 <view class="login-from"> 
 
 <!--账号--> 
 <view class="inputView"> 
   <!--账号--> 
  <image class="nameImage" src="/images/name.png"></image> 
  <label class="loginLab">用户名</label> 
  <input class="inputText" placeholder="请输入用户名" bindinput="nameInput" /> 
 </view> 
 <view class="line"></view> 
 
 <!--密码--> 
 <view class="inputView"> 
  <image class="keyImage" src="/images/name.png"></image> 
  <label class="loginLab">密   码</label> 
  <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" /> 
 </view> 
 
 <!--按钮--> 
 <view class="loginBtnView"> 
  <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">登录</button> 
 </view> 
 </view> 
</view> 